【<%= link_to 'レストラン新規登録', new_restaurant_path %>】

<table>
  <thead>
    <tr>
      <th>店名</th>
      <th>住所</th>
      <th>電話</th>
      <th>定休日</th>
      <th>画像</th>
      <th>予算</th>
      <th>食べログID</th>
      <th>食べログスコア</th>
      <th>所要時間</th>
      <th>店までの距離</th>
      <th>地図座標</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.restaurant_name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.tel %></td>
        <td><%= restaurant.holiday %></td>
        <td>
          <%= image_tag(restaurant.image_url, width: 80) if restaurant.image.present? %></td>
        <td><%= restaurant.budget %></td>
        <td><%= restaurant.tabelog_id %></td>
        <td><%= restaurant.tabelog_score %></td>
        <td><%= restaurant.time_required %></td>
        <td><%= restaurant.distance %></td>
        <td><%= restaurant.geocode %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
